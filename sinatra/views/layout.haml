!!!
%html{:lang => "en-au"}
  %head
    %meta{:charset => "UTF-8"}
    %title= @page_title

    %style{:type => "text/css"}
      :sass
        body
          :position relative
          :background-color #dc0
          :color black
          :font-family "Helvetica", arial, sans-serif
          :width 650px
          :margin 0 auto
          :padding 30px 0
          
          .dev_notice
            :position absolute
            :top 0
            :left 0
            :right 0
            :font-size 14px
            :line-height 20px
            :height 20px
            :background black
            :color white
            :text-align center
          
          > h1
            :font-size 32px
            :margin 0 0 10px 12px
            :position relative
            :text-transform uppercase
            a
              :color #000
              :text-decoration none
              img
                :position absolute
                :top 0
                :left -140px
                :border none
              .owner
                :display block
                :font-size 16px
                :font-weight bold
                :text-transform uppercase
                :color #fff
    %script{:src => versioned_javascript("jquery-1.3.2.min"), :type => "text/javascript"}
  %body
    - if Bananajour.env == 'development'
      .dev_notice DEV MODE
    
    %h1
      %a{:href => "/"}
        %img{:src => "/logo.png", :width => "100", :height => "163", :alt => "Banana broadcasting to the world"}/
        %span.owner
          == #{Bananajour.config.name}&rsquo;s
        Bananajour
    = yield
  