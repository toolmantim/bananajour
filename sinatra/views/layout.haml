!!! Strict
%html
  %head
    %title= @page_title

    %style{:type => "text/css"}
      :sass
        body
          :background-color #dc0
          :color black
          :font-family "Helvetica", arial, sans-serif
          :width 650px
          :margin 0 auto
          
          > h1
            :font-size 32px
            :margin 30px 0 10px 12px
            :position relative
            :text-transform uppercase

            img
              :position absolute
              :top 0
              :left -140px

            .owner
              :display block
              :font-size 16px
              :font-weight bold
              :text-transform uppercase
              :color #fff
      
  %body
    %h1
      %img{:src => "/logo.png", :width => "100", :height => "163", :alt => "Banana broadcasting to the world"}/
      %span.owner
        == #{Bananajour.config.name}&rsquo;s
      Bananajour
    = yield
