#!/usr/bin/env ruby

require 'rubygems'
require "#{File.dirname(__FILE__)}/../lib/bananajour"

Bananajour.setup! unless Bananajour.setup?

case ARGV.first

when nil, "serve"
  Bananajour.serve_web!
  Bananajour.serve_git!
  Bananajour.advertise!
  Process.wait

when "add"
  Bananajour.add!(ARGV[1])

when "help", "--help", "-h"
  puts <<-HELP
Usage: #{$0} [<command>]

Commands:
  none       - Start the web, git and bonjour serving
  add [name] - Adds the current directory as a new project.
HELP
else
  raise "Don't understand"
end
